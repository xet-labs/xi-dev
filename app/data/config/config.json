{
  "app": {
    "mode": "${APP_MODE:-release}",
    "port": "${APP_PORT:-8080}",
    "env_files": []
  },
  "brand": {
    "name": "${APP_NAME:-XetLabs}",
    "abbr": "${APP_ABBR:-XL}",
    "logo": [
      "${APP_LOGO}"
    ],
    "featured_img": [
      "/res/static/brand/brand.svg"
    ],
    "domain": "${APP_DOMAIN:-localhost}",
    "url": "${APP_URL:-http://localhost}"
  },
  "db": {
    "db_default": "${DB_DEFAULT:-db}",
    "rdb_default": "${RDB_DEFAULT:-rdb}",
    "rdb_prefix": "${APP_ABBR:-redis}",
    "conn": {
      "db": {
        "enable": "${DB_ENABLE:-true}",
        "db": "${DB:-XI}",
        "user": "${DB_USER:-XI_u}",
        "pass": "${DB_PASS}",
        "driver": "${DB_DRIVER:-mysql}",
        "host": "${DB_HOST:-127.0.0.1}",
        "port": "${DB_PORT:-3306}",
        "charset": "${DB_CHARSET:-utf8mb4}",
        "engine": "${DB_ENGINE}",
        "collation": "${DB_COLLATION:-utf8mb4_unicode_ci}",
        "socket": "${DB_SOCKET}",
        "prefix": "${DB_PREFIX}",
        "prefixindexes": true,
        "strict": true
      },
      "rdb": {
        "enable": "${RDB_ENABLE:-true}",
        "rdb": "${RDB:-0}.int",
        "driver": "redis",
        "host": "${RDB_HOST:-127.0.0.1}",
        "port": "${RDB_PORT:-6379}",
        "pass": ""
      }
    }
  },
  "view": {
    "css_base_dir": "view/partials",
    "template_dirs": [
      "view/layout",
      "view/partials",
      "view/pages"
    ],
    "default": {
      "data": {
        "title": "XetIndustries"
      },
      "layout": "layout/default",
      "nav_menu": [
        {
          "label": "Home",
          "href": "/"
        },
        {
          "label": "Blog",
          "href": "/blog"
        },
        {
          "label": "Product",
          "href": "#"
        },
        {
          "label": "Support",
          "href": "#"
        },
        {
          "label": "Contact",
          "href": "#"
        }
      ],
      "css": [
        "/res/css/app.css"
      ],
      "js99": [
        "/res/js/jquery/jquery.min.js",
        "/res/js/app.js"
      ],
      "meta": {
        "referrer": "no-referrer-when-downgrade",
        "robots": "index, follow",
        "tags": [
          "XetIndustries",
          "Xet Industries",
          "xetindustries",
          "xet industries",
          "Xtreme Embedded Tech Industries"
        ],
        "publisher": {
          "name": "Xet Industries",
          "url": "https://xetindustries.com"
        },
        "brand": {
          "inc_title_suffix": true,
          "title_suffix_sep": " | "
        }
      }
    },
    "pages": {
      "home": {
        "route": "/",
        "render": "file",
        "content_file": "view/pages/home.part.html",
        "menu": "Home",
        "meta": {
          "title": "Xet Industries",
          "canonical": "https://xetindustries.com/",
          "description": "A Collaborative Platform for Makers, Creators, and Developers."
        }
      },
      "blog": {
        "route": "/blog",
        "render": "file",
        "content_file": "view/pages/blog.part.html",
        "menu": "Blog",
        "sub_brand": "Blog",
        "css": [
          "/res/css/app.css",
          "/res/css/blog.css"
        ],
        "js99": [
          "/res/js/jquery/jquery.min.js",
          "/res/js/app.js",
          "/res/js/blog.js"
        ],
        "meta": {
          "title": "Blog",
          "description": "Discover Insightful Articles, Expert Tips and Inspiring Ideas. Write, Share and Connect with a thriving like-minded community.",
          "canonical": "https://xetindustries.com/blog"
        }
      },
      "blogs": {
        "enable": false,
        "route": "/blog/*",
        "layout": "layout/blogs",
        "menu": "Blog",
        "sub_brand": "Blog",
        "css": [
          "/res/css/app.css",
          "/res/css/blogs.css"
        ],
        "js99": [
          "/res/js/jquery/jquery.min.js",
          "/res/js/app.js",
          "/res/util/copy-code.util.js",
          "/res/util/h2-clickable.util.js"
        ],
        "lib99": [
          "hljs"
        ]
      }
    }
  }
}